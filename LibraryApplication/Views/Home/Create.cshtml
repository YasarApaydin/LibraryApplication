@model Book
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-asp-controller="Home" asp-action="Create"  enctype="multipart/form-data" >
    <div class="container " style="width:40%;">
       
        <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
            <strong> <span style ="color:red;" asp-validation-for="Name"></span></strong>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <strong> <span style="color:red;" asp-validation-for="Author"></span></strong>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <strong> <span style="color:red;" asp-validation-for="Price"></span></strong>
    </div>
    <div class="input-group mb-3">
     <input type="file" id="imageFile" name="imageFile" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Hepsi</option>
                <strong> <span style="color:red;" asp-validation-for="CategoryId"></span></strong>
              
        </select>
    </div>
    <div class="mb-3 form-check">
        <input  asp-for="Shelf" class="form-check-input"/>
            <label asp-for="Shelf" class="form-cheeck-label">Shelf</label>
    </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>